<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

    <t t-name="web.CountdownWidget">
        <div t-att-class="getCountdownClass()">
            <t t-if="countdownData.isExpired">
                <div class="countdown-expired">
                    <i class="fa fa-clock-o"></i>
                    <span class="countdown-label">Done</span>
                </div>
            </t>
            <t t-else="">
                <div class="countdown-item">
                    <span class="countdown-number" t-esc="countdownData.days"/>
                    <t t-if="shouldShowLabels()">
                        <span class="countdown-label">Days</span>
                    </t>
                </div>
                <div class="countdown-separator">:</div>
                <div class="countdown-item">
                    <span class="countdown-number" t-esc="formatNumber(countdownData.hours)"/>
                    <t t-if="shouldShowLabels()">
                        <span class="countdown-label">Hours</span>
                    </t>
                </div>
                <div class="countdown-separator">:</div>
                <div class="countdown-item">
                    <span class="countdown-number" t-esc="formatNumber(countdownData.minutes)"/>
                    <t t-if="shouldShowLabels()">
                        <span class="countdown-label">Minutes</span>
                    </t>
                </div>
                <div class="countdown-separator">:</div>
                <div class="countdown-item">
                    <span class="countdown-number" t-esc="formatNumber(countdownData.seconds)"/>
                    <t t-if="shouldShowLabels()">
                        <span class="countdown-label">seconds</span>
                    </t>
                </div>
            </t>
        </div>
    </t>

</templates>
